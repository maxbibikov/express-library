extends layout

block content
  div.container
    h1=title

    p #[strong Author:] &nbsp;
      a(href=book.author.url) #{book.author.name}
    p #[strong Summary:] #{book.summary}
    p #[strong ISBN:] #{book.isbn}
    p #[strong Genre:] &nbsp;
      each genre, index in book.genre
        a(href=genre.url) #{genre.name}
        if index < book.genre.length - 1
          |, 

    h4 Copies

    each bookInstance in bookInstanceList
      hr
      if bookInstance.status=='Available'
        p.text-success #{bookInstance.status}
      else if bookInstance.status=='Maintenance'
        p.text-danger #{bookInstance.status}
      else
        p.text-warning #{bookInstance.status}
      p #[strong Imprint:] #{bookInstance.imprint}
      if bookInstance.status!='Available'
        p #[strong Due back:] #{bookInstance.due_back_formatted}
      p #[strong Id:] &nbsp;
        a(href=bookInstance.url) #{bookInstance._id}
    else
      p There are no copies of this book in library.

    hr
    div.row
      div.col-sm
        a(href=book.url + '/delete').list-group-item.list-group-item-action.text-center ðŸ”¥Delete Book
      div.col-sm
        a(href=book.url + '/update').list-group-item.list-group-item-action.text-center âœï¸ Update Book
      div.col-sm
      div.col-sm
