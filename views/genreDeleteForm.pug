extends layout

block content
  h1 #{title}
  h3 #{genre.name}

  if genreBooks.length > 0 
    p.text-warning #[strong Delete the following books before attempting to delete this genre]

    h4 Books
    ul.list-group
      for book in genreBooks
        li.list-group-item
          a(href=book.url) #{book.title}

  else
    p.text-warning Do you really want to delete this genre?

    form(action="" method="post")
      .form-group
        input.form-control(type="hidden" name="genreID" required="true" value=genre._id)
      button.btn.btn-danger(type="submit") DELETE
