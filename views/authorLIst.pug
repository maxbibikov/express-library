extends layout

block content
  h1=title

  ul
    each author in authorList
      li
        a(href=author.url) #{author.name} 
        if !author.date_of_birth
          |
        else if author.date_of_death
          | (#{new Date(author.date_of_birth).getFullYear()} - #{new Date(author.date_of_death).getFullYear()})
        else if author.date_of_birth
          | #{new Date(author.date_of_birth).getFullYear()}
    else
      li There are no authors.
