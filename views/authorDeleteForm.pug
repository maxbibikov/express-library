extends layout

block content
  h1 #{title} 
  h3 #{author.name}
  if author.date_of_birth
    p #{author.date_of_birth_formatted}
      if author.date_of_death
        | - #{author.date_of_death_formatted}

  if authorBooks.length > 0
    p.text-warning #[strong Delete the following books before attempting to delete this author]

    h4 Books
    ul.list-group
      for book in authorBooks
        li.list-group-item
          a(href=book.url) #{book.title}

  else
    p.text-warning Do you really want to delete this Author?

    form(method='POST' action="")
      div.form-group
        input.form-control(type='hidden' name='authorID' required='true' value=author._id)
      button.btn.btn-danger(type='submit') DELETE


